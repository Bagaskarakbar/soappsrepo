<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvItemRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rlAntrian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colored_rounded_button"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/txNoAntri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="No."
            android:textColor="@color/primaryWhiteColor"
            android:textSize="8pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txJamMulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam 11:15 "
                android:textColor="@color/primaryWhiteColor"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txJamAkhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 11:30"
                android:textColor="@color/primaryWhiteColor"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>